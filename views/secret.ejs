<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to the Gym</title>
    <link rel="stylesheet" href="styles.css">
</head>
<style>
    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}

.container {
    max-width: 600px;
    margin: 50px auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    text-align: center;
}

h1 {
    margin-bottom: 20px;
}

.ticket {
    margin-bottom: 20px;
    padding: 10px;
    background-color: #007bff;
    color: #fff;
    border-radius: 5px;
}

</style>

</script>
<body>
    <div class="container">
        <h1>Welcome to the Gym</h1>
        <p>Below are your entry tickets. Please keep them safe!</p>
        <div id="tickets"></div>
    </div>

    <script src="script.js"></script>
</body>
<script>
    // Function to generate a random entry ticket
function generateTicket() {
    // Generate a random ticket code (for demonstration purposes)
    const ticketCode = Math.random().toString(36).substr(2, 8);
    return ticketCode.toUpperCase(); // Convert to uppercase for readability
}

// Function to create and display entry tickets
function displayTickets() {
    const ticketsContainer = document.getElementById("tickets");
    const numTickets = 1; // Number of tickets to generate (can be changed)

    for (let i = 1; i <= numTickets; i++) {
        const ticket = generateTicket();
        const ticketElement = document.createElement("div");
        ticketElement.classList.add("ticket");
        ticketElement.innerText = `Entry Ticket ${i}: ${ticket}`;
        ticketsContainer.appendChild(ticketElement);
    }
}

// Call the function to display entry tickets when the page loads
window.onload = displayTickets;

</script>
</html>
